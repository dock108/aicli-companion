{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.claude-companion.hostapp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  },
  "productName": "Claude Companion",
  "version": "0.1.0",
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Claude Companion Server Manager",
        "width": 600,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
