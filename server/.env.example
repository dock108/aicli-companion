# Server Configuration
PORT=5173
HOST=0.0.0.0
CORS_ORIGIN=*

# Authentication
# For local network: AUTH_REQUIRED=false (default)
# For public exposure: AUTH_REQUIRED=true (auto-enforced)
AUTH_REQUIRED=false
AUTH_TOKEN=

# Internet Exposure (auth auto-required when enabled)
ENABLE_TUNNEL=false
TUNNEL_PROVIDER=ngrok
NGROK_AUTH_TOKEN=
EXPOSE_PUBLIC=false

# TLS Configuration (optional)
ENABLE_TLS=false
TLS_KEY_PATH=./certs/key.pem
TLS_CERT_PATH=./certs/cert.pem

# Apple Push Notification Service (APNS) Configuration
# Required for push notifications to work
APNS_CERT_PATH=./certs/apns-cert.pem
APNS_KEY_PATH=./certs/apns-key.pem
APNS_PASSPHRASE=your-passphrase-here
APNS_BUNDLE_ID=com.your.app.bundleid

# Environment
NODE_ENV=development

# Security Configuration
# Comma-separated list of directories where Claude can operate
# Example: /Users/username/projects,/Users/username/documents
AICLI_SAFE_DIRECTORIES=

# Comma-separated list of blocked command patterns
# Example: rm -rf /,format,diskutil eraseDisk
AICLI_BLOCKED_COMMANDS=

# Comma-separated list of destructive command patterns
# These will require confirmation if AICLI_DESTRUCTIVE_COMMANDS_REQUIRE_CONFIRMATION is true
AICLI_DESTRUCTIVE_COMMANDS=rm -rf,format,diskutil erase,dd if=,mkfs,fdisk

# Require confirmation for destructive commands
AICLI_DESTRUCTIVE_COMMANDS_REQUIRE_CONFIRMATION=false

# Maximum file size Claude can create/modify (in bytes)
# Default: 10485760 (10MB)
AICLI_MAX_FILE_SIZE=10485760

# Enable read-only mode (blocks all write operations)
AICLI_READONLY_MODE=false

# Security preset: unrestricted, standard, restricted, custom
AICLI_SECURITY_PRESET=standard

# Enable security audit logging
AICLI_ENABLE_AUDIT=true

# Claude CLI permission settings (existing)
# Permission mode: default, acceptEdits, bypassPermissions, plan
AICLI_PERMISSION_MODE=default

# Comma-separated list of allowed tools
# Example: Read,Write,Edit,Bash
AICLI_ALLOWED_TOOLS=

# Comma-separated list of disallowed tools
AICLI_DISALLOWED_TOOLS=

# Skip all permission checks (dangerous!)
AICLI_SKIP_PERMISSIONS=false