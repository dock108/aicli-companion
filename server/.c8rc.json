{
  "all": true,
  "include": ["src/**/*.js"],
  "exclude": [
    "src/**/*.test.js", 
    "src/test/**/*.js", 
    "src/test-integration/**/*.js",
    "src/__tests__/**/*.js", 
    "test-*.js",
    "src/index.js",
    "src/config/server-startup.js"
  ],
  "reporter": ["text", "lcov", "html", "json-summary"],
  "check-coverage": false,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  }
}
