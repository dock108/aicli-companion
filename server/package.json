{
  "name": "aicli-companion-server",
  "version": "1.0.0",
  "description": "Companion server for AICLI Code mobile app",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "NODE_ENV=test node --test --test-force-exit --experimental-test-isolation=none 'src/test/!(integration)/**/*.test.js'",
    "test:coverage": "rm -rf coverage .nyc_output && NODE_ENV=test npx c8 --reporter=text --reporter=lcov --reporter=json-summary node --test --test-force-exit --test-timeout=30000 --experimental-test-isolation=none 'src/test/!(integration)/**/*.test.js'",
    "test:integration": "NODE_ENV=test node --test --test-force-exit --experimental-test-isolation=none src/test/integration/**/*.test.js",
    "test:uat": "NODE_ENV=test node --test --test-force-exit src/test-uat/**/*.test.js",
    "test:uat:message-flow": "NODE_ENV=test node --test --test-force-exit src/test-uat/message-flow.test.js",
    "test:uat:integration": "NODE_ENV=test node --test --test-force-exit src/test-uat/integration.test.js",
    "test:uat:performance": "NODE_ENV=test node --test --test-force-exit src/test-uat/performance.test.js",
    "test:uat:edge-cases": "NODE_ENV=test node --test --test-force-exit src/test-uat/edge-cases.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "install-global": "npm install -g .",
    "prepare": "husky",
    "hostapp": "cd hostapp && npm run tauri dev",
    "hostapp:dev": "cd hostapp && npm run dev",
    "hostapp:build": "cd hostapp && npm run tauri build",
    "hostapp:install": "cd hostapp && npm install"
  },
  "keywords": [
    "aicli-code",
    "ai",
    "mobile",
    "companion",
    "server"
  ],
  "author": "Michael Fuscoletti",
  "license": "MIT",
  "dependencies": {
    "@ngrok/ngrok": "^1.5.2",
    "@parse/node-apn": "^6.5.0",
    "bonjour-service": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "qrcode": "^1.5.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "aicli-companion-server": "src/index.js"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
