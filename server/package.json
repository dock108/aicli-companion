{
  "name": "aicli-companion-server",
  "version": "1.0.0",
  "description": "Companion server for AICLI Code mobile app",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "NODE_ENV=test node --test --test-force-exit src/test/**/*.test.js",
    "test:coverage": "NODE_ENV=test c8 --reporter=lcov --reporter=text node --test --test-force-exit src/test/**/*.test.js",
    "test:integration": "NODE_ENV=test node --test src/test-integration/**/*.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "install-global": "npm install -g .",
    "prepare": "husky",
    "hostapp": "cd hostapp && npm run tauri dev",
    "hostapp:dev": "cd hostapp && npm run dev",
    "hostapp:build": "cd hostapp && npm run tauri build",
    "hostapp:install": "cd hostapp && npm install"
  },
  "keywords": [
    "aicli-code",
    "ai",
    "mobile",
    "companion",
    "server"
  ],
  "author": "Michael Fuscoletti",
  "license": "MIT",
  "dependencies": {
    "@parse/node-apn": "^6.5.0",
    "bonjour-service": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "aicli-companion-server": "src/index.js"
  }
}
