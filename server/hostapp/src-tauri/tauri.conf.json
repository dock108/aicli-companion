{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.aicli-companion.hostapp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "AICLI Companion",
  "version": "0.1.0",
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "AICLI Companion Server Manager",
        "width": 600,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
