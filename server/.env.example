# Server Configuration
PORT=5173
HOST=0.0.0.0
CORS_ORIGIN=*

# Authentication
AUTH_REQUIRED=false
AUTH_TOKEN=

# Internet Exposure
ENABLE_TUNNEL=false
TUNNEL_PROVIDER=ngrok
NGROK_AUTH_TOKEN=
EXPOSE_PUBLIC=false

# TLS Configuration
ENABLE_TLS=false
TLS_KEY_PATH=./certs/key.pem
TLS_CERT_PATH=./certs/cert.pem

# Apple Push Notification Service (APNS)
APNS_CERT_PATH=./certs/apns-cert.pem
APNS_KEY_PATH=./certs/apns-key.pem
APNS_PASSPHRASE=your-passphrase-here
APNS_BUNDLE_ID=com.your.app.bundleid

# Environment
NODE_ENV=development

# Security Configuration
AICLI_SAFE_DIRECTORIES=

AICLI_BLOCKED_COMMANDS=

AICLI_DESTRUCTIVE_COMMANDS=rm -rf,format,diskutil erase,dd if=,mkfs,fdisk

AICLI_DESTRUCTIVE_COMMANDS_REQUIRE_CONFIRMATION=false

AICLI_MAX_FILE_SIZE=10485760

AICLI_READONLY_MODE=false

# Security preset: unrestricted, standard, restricted, custom
AICLI_SECURITY_PRESET=standard

AICLI_ENABLE_AUDIT=true

# Claude CLI Permissions
AICLI_PERMISSION_MODE=default

AICLI_ALLOWED_TOOLS=

AICLI_DISALLOWED_TOOLS=

AICLI_SKIP_PERMISSIONS=false

# Claude process timeout disabled - Claude manages its own lifecycle

# Auto-Response Configuration
ENABLE_AUTO_RESPONSE=false
MAX_AUTO_ITERATIONS=10
MIN_CONFIDENCE=0.6

# AI Response Generation (OpenAI)
USE_AI_RESPONSES=false
OPENAI_API_KEY=
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=150
AI_RATE_LIMIT=20

# Training Data Configuration
TRAINING_DATA_DIR=./training-data

# Planning Mode Configuration
PLANNING_MODE_EXTENSIONS=
PLANNING_MODE_STRICT=false

# Configuration Path (defaults to home directory)
CONFIG_PATH=