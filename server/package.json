{
  "name": "claude-companion-server",
  "version": "1.0.0",
  "description": "Companion server for Claude Code mobile app",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test",
    "test:coverage": "c8 --reporter=lcov --reporter=text node --test",
    "test:watch": "node --test --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "install-global": "npm install -g .",
    "prepare": "husky"
  },
  "keywords": [
    "claude-code",
    "ai",
    "mobile",
    "companion",
    "server"
  ],
  "author": "Michael Fuscoletti",
  "license": "MIT",
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.0.4",
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "claude-companion-server": "./src/index.js"
  }
}
